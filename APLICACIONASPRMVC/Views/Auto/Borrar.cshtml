@model APLICACIONASPRMVC.Models.Db.Automobile
@{
    ViewData["Title"] = "Borrar Auto";
}





<div class="row">
    <div class="col-sm-12">

        <div class="card border">
            <div class="card-header">
                <h3 class="text-center">Borrar Auto</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Auto" asp-action="Borrar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="AutomobileId" />
                    <div class="form-group">
                        <label asp-for="Vin" class="control-label"></label>
                        <input asp-for="Vin" class="form-control" readonly />
                        <span asp-validation-for="Vin" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>

                        <input asp-for="Model" class="form-control"  readonly/>
                        <span asp-validation-for="Model" class="text-danger" ></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Make" class="control-label"></label>

                        <input asp-for="Make" class="form-control"  readonly/>
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>

                        <input asp-for="Year" class="form-control" readonly/>
                        <span asp-validation-for="Year" class="text-danger">Falta el anio</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BranchOfficeId" class="control-label"></label>

                        <input asp-for="BranchOfficeId" class="form-control" readonly />
                        <span asp-validation-for="BranchOfficeId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Borrar Auto</button>

                    </div>

                </form>

            </div>

        </div>
    </div>

</div>