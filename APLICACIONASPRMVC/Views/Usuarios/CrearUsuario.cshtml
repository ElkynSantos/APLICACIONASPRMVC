@model APLICACIONASPRMVC.Models.Db.Employee
@{
    ViewData["Title"] = "Crear Auto";
}





<div class="row">
    <div class="col-sm-12">

        <div class="card border">
            <div class="card-header">
                <h3 class="text-center">Crear Auto</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Usuarios" asp-action="CrearUsuario" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdEmployee" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>

                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Lastname" class="control-label"></label>

                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>

                    </div>


                    <div class="form-group">
                        <label asp-for="BranchofficeId" class="control-label"></label>

                        <input asp-for="BranchofficeId" class="form-control" />
                        <span asp-validation-for="BranchofficeId" class="text-danger"></span>

                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Crear Usuario</button>

                    </div>

                </form>

            </div>

        </div>
    </div>

</div>



