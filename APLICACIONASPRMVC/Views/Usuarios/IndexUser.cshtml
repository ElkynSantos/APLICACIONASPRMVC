@model IEnumerable<APLICACIONASPRMVC.Models.Db.Employee>
@{
    ViewData["Title"] = "Lista de Empleados";
}

<h1 class="text-center">
    Welcome
</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="float-right">
            <a asp-action="CrearUsuario" asp-controller="Usuarios" class="btn btn-success" method="get">Nuevo Usuario</a>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">

        <div class="card border">
            <div class="card-header">
                <h3 class="text-center">Lista de usuario</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.IdEmployee)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Lastname)</th>

                                    <th>@Html.DisplayNameFor(m=>m.BranchofficeId)</th>

                     
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m=>item.IdEmployee)</td>
                                        <td>@Html.DisplayFor(m=>item.Name)</td>
                                        <td>@Html.DisplayFor(m=>item.Lastname)</td>
                                        <td>@Html.DisplayFor(m=>item.BranchofficeId)</td>
                              
                                        <td>

                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.IdEmployee"> Editar</a>
                                            <a class="btn btn-primary" asp-action="Borrar" asp-route-id="@item.IdEmployee">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p> No hay registros</p>
                    }
                </div>

            </div>

        </div>
    </div>

</div>
</div>



